<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_individual_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivek.homework7part1.IndividualProfileActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:id="@+id/firstlayoutindivi">

        <ImageView
            android:layout_width="67dp"
            android:layout_height="61dp"
            android:id="@+id/profilepicindivi"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewfirstNameindivi"
            android:layout_weight="1"
            android:padding="0.5dp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewlastNameindivi"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

                <ImageView
            android:layout_width="40dp"
            android:layout_height="61dp"
            android:src="@drawable/logout"
            android:id="@+id/imageLogout"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondlayoutind"
        android:layout_below="@+id/firstlayoutindivi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagesconv"
        android:layout_weight="1"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:text="Message Conversation"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/listlayout"
        android:layout_below="@+id/secondlayoutind">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:id="@+id/individualuser_listView"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@+id/listlayout"
        android:id="@+id/linearLayout11">


        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="10dp"
            android:inputType="textPersonName"
            android:hint="Type message to send"
            android:layout_weight="0.5"
            android:id="@+id/editTextMessageind"
            android:ems="10"
            android:layout_below="@+id/linearLayout11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:src="@drawable/send"
            android:id="@+id/imageSend"
            android:padding="10dp"
            android:clickable="true"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/gallery"
            android:id="@+id/imageGallery"
            android:padding="10dp"
            android:clickable="true"
            android:layout_weight="0.25"
            android:layout_marginBottom="11dp" />
    </LinearLayout>


</RelativeLayout>
